.modal-wrapper
  position: fixed
  top: 0
  left: 0
  width: 100%
  height: 100%
  display: flex
  align-items: center
  justify-content: center
  background: rgba(0, 0, 0, 0.7)

.modal
  border: 2px solid black
  max-width: 50%
  min-width: 240px
  box-sizing: border-box
  background: white;

  & > h3
    margin: 0
    text-align: center
    background: gray
    color: white
    padding: 5px

  & > p
    margin: 0
    padding: 10px

.button-wrapper
  margin: 0
  padding: 0
  text-align: center

  & > button
    margin: 5px
    padding: 5px
    border: none
    background: black
    color: white
