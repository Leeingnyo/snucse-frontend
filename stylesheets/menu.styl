.top-menu
  position: fixed
  z-index: 999
  top: 0
  left: 0
  right: 0
  height: 4em
  background-color: #2d2d2d
  display: inline
  li
    line-height: 2em
    list-style: none
    color: white
    float: left
    vertical-align: middle
    text-align: center

.menulink
  text-decoration: none
  display: block
  width: 4em
  color: white
  &:hover
    color: red
    background-color: #4d4d4d

.side-menu
  position: fixed
  width: 10em
  left: 0
  top: 4em
  bottom: 0
  background-color: #cfc

.content
  position: absolute
  top: 4em
  left: 10em
